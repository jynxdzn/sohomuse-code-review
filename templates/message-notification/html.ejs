<div class="body">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="subject">You have received a new message</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 content">
                <table width="100%" cellpadding="0" cellspacing="0" border="0">
                    <tr>
                        <td valign="top" width="60"><img src="<%= baseUrl %>/api/v1/users/username/<%= username %>/avatar?width=45&amp;height=45" width="45" /></td>
                        <td valign="top"><%= content %></td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 middle">
                <a class="btn btn-primary" href="<%= baseUrl %>/app#messages/<%= messageId %>">View message</a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <p class="footer">
                    &copy; Copyright SohoMuse INC
                </p>
            </div>
        </div>
    </div>
    <img src="<%= baseUrl %>/img/s-email.png" class="logo-img">
</div>
